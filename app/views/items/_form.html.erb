<div class="container">
  <%= form_with model: item, local: true do |f| %>
    <%= render "shared/error_message", model: f.object %>

    <div class="form-field">
      <%= f.label :image %>
      <%= f.file_field :image, class: "item-image-fileld" %>
    <div>
    <div class="form-field">
      <%= f.label :name %>
      <%= f.text_field :name, class: "item-name-field" %>
    </div>

    <div class="form-field">
      <%= f.label :description %>
      <%= f.text_field :description, class: "item-description-field" %>
    </div>

    <div class="form-field">
      <%= f.label :category_id %>
      <%= f.collection_select :category_id, Category.all, :id, :name ,class: "item-category-field" %>
    </div>

    <div class="form-field">
      <%= f.label :status_id %>
      <%= f.collection_select :status_id, Status.all, :id, :name ,class: "item-status-field" %>
    </div>

    <div class="form-field">
      <%= f.label :prefecture_id %>
      <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name ,class: "item-prefecture-field" %>
    </div>

    <div class="form-field">
      <%= f.label :delivery_days_id %>
      <%= f.collection_select :delivery_days_id, DeliveryDays.all, :id, :name ,class: "item-status-field" %>
    </div>

    <div class="form-field">
      <%= f.label :shipping_payer_id %>
      <%= f.collection_select :shipping_payer_id, ShippingPayer.all, :id, :name ,class: "item-status-field" %>
    </div>

    <div class="form-field">
      <%= f.label :price %>
      <%= f.text_field :price, class:"item-price-field", placeholder:"例）300" %>
    </div>

    <div class="form-btn">
      <% if controller.controller_name == "items" && controller.action_name == "new" %>
        <%= f.submit "出品する", class: "item-submit" %>
      <% else %>
        <%= f.submit "更新する", class: "item-submit" %>
      <% end %>
    </div>
  <% end %>
</div>