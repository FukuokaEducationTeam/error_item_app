<div class="container">
  <div class="item">
    <div class="item__image">
      <%= image_tag @item.image %>
    </div>

    <div class="item__name">
      <div class="item-name">
        <p class="item-name__sentence">
          <%= @item.name %>
        </p>
      </div>
    </div>

    <div class="item__description">
      <div class="item-description">
        <p class="item-description__sentence">
          <%= @item.description %>
        </p>
      </div>
    </div>

    <div class="item-details">
      <table>
        <tbody>
          <tr>
            <td>
              価格
            </td>
            <td>
              <%= @item.price %>円
            </td>
          </tr>
          <tr>
            <td>
              出品者
            </td>
            <td>
              <%= @item.user.nickname %>
            </td>
          </tr>
          <tr>
            <td>
              カテゴリー
            </td>
            <td>
              <%= @item.category.name %>
            </td>
          </tr>
          <tr>
            <td>
              商品の状態
            </td>
            <td>
              <%= @item.status.name %>
            </td>
          </tr>
          <tr>
            <td>
              発送日の目安
            </td>
            <td>
              <%= @item.delivery_days.name %>
            </td>
          </tr>
          <tr>
            <td>
              発送元地域
            </td>
            <td>
              <%= @item.prefecture.name %>
            </td>
          </tr>
          <tr>
            <td>
              配送料負担
            </td>
            <td>
              <%= @item.shipping_payer.name %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>